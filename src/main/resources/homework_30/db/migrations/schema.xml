<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="Create-table-Country" author="Henry">
        <preConditions>
            <not>
                <tableExists tableName="Country"/>
            </not>
        </preConditions>
        <createTable tableName="Country">
            <column name="IP" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="Country" type="VARCHAR(255)"/>
            <column name="Country_code" type="VARCHAR(255)"/>
            <column name="City" type="VARCHAR(255)"/>
            <column name="Currency" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="Create-table-Subscriber" author="Henry">
        <preConditions>
            <not>
                <tableExists tableName="Subscriber"/>
            </not>
        </preConditions>
        <createTable tableName="Subscriber">
            <column name="IP" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" unique="true" foreignKeyName="FK_Subscriber_Country"
                             references="Country(IP)"/>
            </column>
            <column name="First_name" type="VARCHAR(255)"/>
            <column name="Second_name" type="VARCHAR(255)"/>
            <column name="Gender" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="Create-table-ToDoList" author="Henry">
        <preConditions>
            <not>
                <tableExists tableName="ToDoList"/>
            </not>
        </preConditions>
        <createTable tableName="ToDoList">
            <column name="ID" type="SERIAL(200)">
                <constraints primaryKey="true"/>
            </column>
            <column name="Note" type="VARCHAR(255)">
<!--                <constraints />-->
            </column>
            <column name="Date" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP">
<!--                <constraints />-->
            </column>
            <column name="Is_Done" type="BOOLEAN" defaultValue="false">
<!--                <constraints />-->
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>